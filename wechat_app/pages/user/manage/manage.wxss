.container {
    padding: 10px;
  }
  
  .header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 10px;
  }
  
  .title {
    font-size: 16px;
    font-weight: bold;
  }
  
  .add-button {
    background-color: #007AFF;
    color: white;
    padding: 5px 10px;
    border-radius: 4px;
    font-size: 14px;
  }
  
  .list-header, .row {
    display: flex;
    align-items: center;
  }
  
  .list-header {
    background-color: #f0f0f0;
    padding: 10px 0;
  }
  
  .header-item, .cell {
    flex: 1;
    text-align: center;
    padding: 10px 0;
  }
  
  .modal {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background-color: rgba(0, 0, 0, 0.5);
    display: flex;
    justify-content: center;
    align-items: center;
  }
  
  .modal-content {
    background-color: white;
    padding: 20px;
    width: 90%;
    border-radius: 8px;
  }
  
  .modal-title {
    font-size: 16px;
    font-weight: bold;
    margin-bottom: 10px;
  }
  